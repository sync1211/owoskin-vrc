<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0-windows10.0.26100.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <InvariantGlobalization>true</InvariantGlobalization>
    <StartupObject>OWOVRC.CLI.Program</StartupObject>
    <PlatformTarget>x64</PlatformTarget>
    <ApplicationIcon>owo.ico</ApplicationIcon>
    <EnableWindowsTargeting>true</EnableWindowsTargeting>
    <SupportedOSPlatformVersion>10.0.17763.0</SupportedOSPlatformVersion>
    <Platforms>AnyCPU;x64</Platforms>
  </PropertyGroup>

  <PropertyGroup Condition="!$(DefineConstants.Contains('TARGET_LINUX')) and !$(DefineContants.Contains('TRIMMING_ENABLED'))">
    <BuiltInComInteropSupport>true</BuiltInComInteropSupport>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="owo.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\OWOVRC.UI\Media\AppIcon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\OWOVRC\OWOVRC.csproj">
      <Properties Condition="$(DefineConstants.Contains('TARGET_LINUX'))">DefineConstants=TARGET_LINUX</Properties>
    </ProjectReference>
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\OWOVRC\OWOVRC.csproj">
      <Properties Condition="$(DefineConstants.Contains('TRIMMING_ENABLED'))">DefineConstants=TRIMMING_ENABLED</Properties>
    </ProjectReference>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Classes\" />
  </ItemGroup>

</Project>
